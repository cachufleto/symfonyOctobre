{% extends 'DiwooCmsBundle:Default:index.html.twig' %}

{% block body %}
    <h1>Auteurs</h1>

    <table>
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ auteur.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ auteur.lastname }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ auteur.login }}</td>
            </tr>
            <tr>
                <th>Mdp</th>
                <td>{{ auteur.mdp }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ auteur.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('auteurs_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('auteurs_edit', { 'id': auteur.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
